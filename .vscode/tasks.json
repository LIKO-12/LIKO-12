{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build [app] and watch for changes",
            "type": "npm",
            "script": "dev:app",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "shared",
                "clear": true
            },
        },
        {
            "label": "Build [kernel] and watch for changes",
            "type": "npm",
            "script": "dev:kernel",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "shared",
                "clear": true
            },
        },
        {
            "label": "Run LIKO-12",
            "type": "shell",
            "command": "love",
            "args": [ "${workspaceFolder}/packages/app/out", "--debug" ],
            "windows": {
                "command": "lovec",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": [
                "Build [app] and watch for changes",
                "Build [kernel] and watch for changes",
            ]
        }
    ]
}